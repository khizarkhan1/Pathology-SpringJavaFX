<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.springjavafx.controllers.PatientController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0" layoutY="14.0" prefHeight="25.0" prefWidth="600.0" style="-fx-background-color: red;" text="Please Enter Patient Information">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" layoutX="14.0" layoutY="53.0" promptText="Full Name" />
      <TextField fx:id="genderField" layoutX="197.0" layoutY="53.0" promptText="Gender" />
      <TextField fx:id="specimenField" layoutX="14.0" layoutY="103.0" promptText="Specimen Type" />
      <TextField fx:id="cnicField" layoutX="197.0" layoutY="103.0" promptText="CNIC" />
      <TextField fx:id="cellField" layoutX="14.0" layoutY="154.0" promptText="Cell No." />
      <TextField fx:id="referredField" layoutX="197.0" layoutY="154.0" promptText="Referred" />
      <Button layoutX="478.0" layoutY="333.0" mnemonicParsing="false" onAction="#onSubmit" text="Submit" />
      <Button layoutX="404.0" layoutY="333.0" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
   </children>
</AnchorPane>
